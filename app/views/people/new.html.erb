<%= form_for :person, url: people_path do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :twitter_handle %><br>
    <%= f.text_area :twitter_handle %>
  </p>

  <p>
    <%= f.label :instagram_name %><br>
    <%= f.text_area :instagram_name %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>